{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/chrome-extension/src",
  "projectType": "application",
  "targets": {
    "build-extension": {
      "executor": "@nrwl/web:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/chrome-extension",
        "index": "apps/chrome-extension/src/index.html",
        "baseHref": "/",
        "main": "apps/chrome-extension/src/main.tsx",
        "polyfills": "apps/chrome-extension/src/polyfills.ts",
        "tsConfig": "apps/chrome-extension/tsconfig.app.json",
        "assets": [
          "apps/chrome-extension/src/favicon.ico",
          "apps/chrome-extension/src/assets"
        ],
        "styles": ["apps/chrome-extension/src/styles.scss"],
        "scripts": [],
        "webpackConfig": "@nrwl/react/plugins/webpack"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/chrome-extension/src/environments/environment.ts",
              "with": "apps/chrome-extension/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "build-static": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "cp apps/chrome-extension/src/manifest.json dist/apps/chrome-extension/manifest.json"
          },
          {
            "command": "mv dist/apps/chrome-extension/index.html dist/apps/chrome-extension/popup.html"
          }
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx run chrome-extension:build-extension"
          },
          {
            "command": "nx run chrome-extension:build-static"
          }
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "chrome-extension:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "chrome-extension:build:development"
        },
        "production": {
          "buildTarget": "chrome-extension:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/chrome-extension/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/chrome-extension"],
      "options": {
        "jestConfig": "apps/chrome-extension/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
