{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chrome-neo-plus/apod-common": ["libs/apod-common/src/index.ts"],
      "@chrome-neo-plus/common": ["libs/common/src/index.ts"],
      "@chrome-neo-plus/common-react": ["libs/common-react/src/index.ts"],
      "@chrome-neo-plus/neows-common": ["libs/neows-common/src/index.ts"],
      "@chrome-neo-plus/nivl-common": ["libs/nivl-common/src/index.ts"],
      "@chrome-neo-plus/storybook": ["libs/storybook/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
